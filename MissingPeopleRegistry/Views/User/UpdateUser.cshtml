@model MissingPeopleRegistry.ViewModels.User.UserUpdateVM

<div class="row offset-md-2 col-md-8 form-panel">
    <form asp-action="UpdateUser">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row row-space">
            <div class="form-group header-text">
                Edytuj użytkownika
            </div>
        </div>
        <input hidden asp-for="@Model.User.Id"/>
        <div class="row row-space">
            <div class="form-group col-md-6">
                <label asp-for="@Model.User.Name" class="control-label"></label>
                <input asp-for="@Model.User.Name" class="form-control input-space" />
                <span asp-validation-for="@Model.User.Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.User.LastName" class="control-label"></label>
                <input asp-for="@Model.User.LastName" class="form-control input-space" />
                <span asp-validation-for="@Model.User.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="row row-space">
            <div class="form-group col-md-6">
                <label asp-for="@Model.User.Email" class="control-label"></label>
                <input asp-for="@Model.User.Email" class="form-control input-space"/>
                <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.Role" class="control-label"></label>
                <select asp-for="@Model.Role" class="form-control input-space">
                    <option value="User">Użytkownik</option>
                    <option value="Admin">Administrator</option>
                </select>
                <span asp-validation-for="@Model.Role" class="text-danger"></span>
            </div>
        </div>
        <div class="row row-space">
            <div class="form-group input-space">
                @Html.ActionLink("Powrót", "Index", "User", null, new { @class = "btn btn-primary" })
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>