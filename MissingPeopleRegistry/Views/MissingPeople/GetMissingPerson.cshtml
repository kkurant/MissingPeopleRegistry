@model MissingPeopleRegistry.ViewModels.MissingPeople.MissingPersonVM

<div class="row offset-md-2 col-md-8 form-panel">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row row-space">
        <div class="form-group header-text">
            Podgląd ogłoszenia o osobie zaginionej
        </div>
    </div>
    <div class="row row-space">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Name" class="control-label"></label>
            <input asp-for="@Model.Name" class="form-control input-space" disabled="disabled" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.LastName" class="control-label"></label>
            <input asp-for="@Model.LastName" class="form-control input-space" disabled="disabled" />
        </div>
    </div>
    <div class="row row-space">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Gender" class="control-label"></label>
            <select asp-for="@Model.Gender" class="form-control input-space" disabled="disabled">
                <option value="Male">Mężczyzna</option>
                <option value="Female">Kobieta</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Age" class="control-label"></label>
            <input asp-for="@Model.Age" class="form-control input-space" disabled="disabled" />
        </div>
    </div>
    <div class="row row-space">
        <div class="form-group">
            <label asp-for="@Model.Description" class="control-label"></label>
            <textarea asp-for="@Model.Description" class="form-control input-space" disabled="disabled"></textarea>
        </div>
    </div>
    <div class="row row-space">
        <div class="form-group col-md-4">
            <label asp-for="@Model.MissingDate" class="control-label"></label>
            <input asp-for="@Model.MissingDate" class="form-control input-space" type="date" id="datePicker" disabled="disabled" />
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.City" class="control-label"></label>
            <input asp-for="@Model.City" class="form-control input-space" disabled="disabled" />
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.Country" class="control-label"></label>
            <input asp-for="@Model.Country" class="form-control input-space" disabled="disabled" />
        </div>
    </div>
    <div class="row row-space">
        <div class="form-group input-space">
            @Html.ActionLink("Powrót", "Index", "Home", null, new { @class = "btn btn-primary" })
        </div>
    </div>
    <div class="row row-space">
        <div class="row">
            Dodane @Model.CreateDate.ToString("dd.MM.yyyy HH:mm") przez @Model.AuthorName
        </div>
        @if (Model.ModifyDate.HasValue)
        {
            <div class="row">
                Ostatnia edycja @Model.ModifyDate.Value.ToString("dd.MM.yyyy HH:mm") przez @Model.LastModifierName
            </div>
        }
    </div>
</div>


