@model MissingPeopleRegistry.ViewModels.Account.LoginVM

@{
    ViewData["Title"] = "Logowanie";
}

@if(ViewBag.Message != null)
{
    <div class="row offset-3 col-md-6" style="margin-bottom: 10px;">
        <div class="text-center" style="margin-bottom: 10px;">
            @ViewBag.Message
        </div>        
    </div>
}

<div class="row offset-3 col-md-6">
    <form asp-action="Login" class="form-panel">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row row-space">
            <div class="form-group header-text">
                Zaloguj się
            </div>
        </div>
        <div class="row row-space">
            <div class="form-group">
                <label asp-for="Email" class="form-text"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-text"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="row row-space" style="margin-top:15px;">
            <div class="form-group" style="text-align:center">
                <input type="submit" value="Zaloguj" class="signup-button" />
            </div>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}